				<%@head = User.find(i.event_head)%>
                                <%=i.event_name%>&nbsp;<a href=http://www.facebook.com/profile.php?id=<%=@head.fb_id%>><img class="img" src="https://graph.facebook.com/<%=@head.fb_id%>/picture?access_token=<%= @access_token %>" width=20 title=<%=@head.username%>></a><br>
				<%if i.event_start== i.event_end%>
                                	<%=i.event_start%><br>
				<%else%>
                                	<%=i.event_start%> ~ <%=i.event_end%><br>
				<%end%>
				<%if i.event_image_url != nil%>
                                <%=image_tag(i.event_image_url,:width=>50)%><br>
				<%end%><br>
                        <%end%>
                <%end%>     
        <%end%> 
	<%end%>
	</div>
	<div id="rightcolumn">
	<h3>新建立的活動</h3>
	<%if @new.size > 0%>
	<%@cnt=0%>
	<%@new.each do |n|%>
		<%@cnt = @cnt+1%>
		<%if @cnt <=5%>
			<%@head = User.find(n.event_head)%>
                        <%=n.event_name%>&nbsp;<a href=http://www.facebook.com/profile.php?id=<%=@head.fb_id%>><img class="img" src="https://graph.facebook.com/<%=@head.fb_id%>/picture?access_token=<%= @access_token %>" width=20 title=<%=@head.username%>></a><br>
			<%if n.event_start== n.event_end%>
                                <%=n.event_start%><br>
			<%else%>
                                <%=n.event_start%> ~ <%=n.event_end%><br>
			<%end%>
			<%if n.event_image_url != nil%>
                        	<%=image_tag(n.event_image_url,:width=>50)%><br>
			<%end%><br>
		<%end%>
	<%end%>
	<%end%>
	</div>
<% else %>
   <p align="center"><%= link_to image_tag("activ.png", :width=>480), login_path %></p>
<%end%>
<script type="text/javascript" charset="utf-8">
$('#create_event').live('click',function(){
	var self=$(this);
	if(self.hasClass('added')){
		self.removeClass('added');
		$('.create').remove();
		return;
	}
	var str = '<br><br><div class="create">';
	str += '<h2>新增活動</h2><%=form_tag ("/home/create_event") do %><%= label_tag :event_name,"活動名稱" %><%= text_field_tag :event_name %><br /><%= label_tag :event_start,"活動開始日期" %>: ';
	str += '<%= date_select(:event_start, :event_start ).lines.map{|line| line.strip}.join.html_safe %>';
		
	str += '<br ><%= label_tag :event_end,"活動結束日期" %>: ';
	str += '<%= date_select(:event_end, :event_end ).lines.map{|line| line.strip}.join.html_safe %>';
	str += '<br /><%= label_tag :org_name,"請選擇活動隸屬於哪個組織" %>:<br / ><%= check_box_tag(:org) %> <%= label_tag(:org_exist, "組織已存在,請選擇") %>';
	str += '<br /><%= check_box_tag(:org,"0") %><%= label_tag(:org_notexist, "組織尚未存在， ") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<br>請輸入組織名稱<%= text_field_tag :org_name_new %><br /><%= button_tag "完成",:class => "sexybutton sexysimple  sexylarge", :type => "submit"%><%=button_tag "取消",:class =>"sexybutton sexysimple sexylarge",:id=>"cancel"%><%end%></div>';
	
	self.addClass('added').after(str);
});
	
$('#cancel').live('click',function(){
	$('#create_event').removeClass('added');
	$('.create').remove();
});
</script>
