<%end%>
<br>
<% @users.each do |u|%>
	<% if u.username == nil%>
		<%=u.email%><br>
	<%end%>
<%end%>
	
</div>
<div id="rightcolumn">
	<br>
	<% @deps.each do |d|%>
 		<%=form_tag :controller => 'event', :action => 'show_dep' do %>
