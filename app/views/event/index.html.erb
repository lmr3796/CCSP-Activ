<%=flash[:notice]%>
<h3><%=@e.organization.org_name%><h2><%=@e.event_name%></h2>
<h2>administrator: <%=@head.username%><img src="https://graph.facebook.com/<%=@head.fb_id%>/picture?access_token=<%= @access_token %>"></h2>


<h2>Users in this event</h2>
<ul>
	<% @users.each do |u|%>
		<li>
		<img src="https://graph.facebook.com/<%=u.fb_id%>/picture?access_token=<%= @access_token %>">
		<%=u.username%> <%=u.email%> #<%=u.id%>
		<% if @user_id == @e.event_head && u.id != @e.event_head%>
			<%= link_to 'Delete User', :controller => 'event', :action => 'destroy', :id => @id, :user_id => @user_id, :d_id => u.id, :onclick => "alert('Are you sure?');"%>
		<%end%>
		</li>
	<%end%>
</ul>
	
<% if @user_id == @e.event_head %>
<h2>Add new user into this event!</h2>
	<%= form_tag(:controller => 'event', :action => 'create',:id => @id, :user_id => @user_id) do %>
	fb email<%= text_field_tag(:email)%>
	<%= submit_tag("Add User")%>
	<%end%>
<%end%>

<br><br>
<h2>Departments in this event</h2>
<ul>
	<% @deps.each do |d|%>
		<li>
		<%= d.dep_name%>
		<%@u = User.find(d.dep_head)%>
		<%=@u.username%> 
                <%=@u.email%>
		dep_id = <%=d.id%>
		<% if @user_id == @e.event_head%>
			<%= link_to 'Delete department', :controller => 'event', :action => 'destroy_dep', :id => @id, :user_id => @user_id, :d_id => d.id%>
		<%end%>
		<ul>
			<% d.users.each do |u|%>
				<li>
					<img src="https://graph.facebook.com/<%=u.fb_id%>/picture?access_token=<%= @access_token %>">
					<%=u.username%> <%=u.email%> #<%=u.id%>
					<% if @user_id == d.dep_head && u.id != d.dep_head %>
						<%= link_to 'Delete User', :controller => 'event', :action => 'destroy_depuser', :id => @id, :user_id => @user_id, :d_id => u.id, :dep_id => d.id%>
					<%end%>
				</li>
			<%end%>
			<% if @user_id == d.dep_head %>
			<li>
				<%= form_tag(:controller => 'event', :action => 'create_depuser',:id => @id, :user_id => @user_id, :dep_id => d.id) do %>
					fb email<%= text_field_tag(:email)%>
					<%= submit_tag("Add User")%>
				<%end%>
			</li>
			<%end%>
		</ul>
		</li>
	<%end%>
</ul>

<% if @user_id == @e.event_head %>
<h2>Add new department into this event!</h2>
<h3> 新增部門(default template: google 行事曆, 約練討論區, 收支記帳表,部門介紹單,檔案連結區)</h3>
	<%= form_tag(:controller => 'event', :action => 'create_dep',:id => @id, :user_id => @user_id) do %>
	department name<%= text_field_tag(:dep_name)%><br>
	administrator email<%= text_field_tag(:email)%>
	<%= submit_tag("Add Department")%>
	<%end%>
<%end%>

<br><br>
<h2>Activities in this event</h2>
<ul>
	<% @acts.each do |a|%>
		<li>
		<%= a.act_name%>
		<%@u = User.find(a.act_head)%>
		<%=@u.username%> 
                <%=@u.email%>
		act_id = <%=a.id%>
		<% if @user_id == @e.event_head%>
			<%= link_to 'Delete Activity', :controller => 'event', :action => 'destroy_act', :id => @id, :user_id => @user_id, :d_id => a.id%>
		<%end%>
		<ul>
			<% a.users.each do |u|%>
				<li>
					<img src="https://graph.facebook.com/<%=u.fb_id%>/picture?access_token=<%= @access_token %>">
					<%=u.username%> <%=u.email%> #<%=u.id%>
					<% if @user_id == a.act_head && u.id != a.act_head %>
						<%= link_to 'Delete User', :controller => 'event', :action => 'destroy_actuser', :id => @id, :user_id => @user_id, :d_id => u.id, :act_id => a.id%>
					<%end%>
				</li>
			<%end%>
			<% if @user_id == a.act_head %>
			<li>
				<%= form_tag(:controller => 'event', :action => 'create_actuser',:id => @id, :user_id => @user_id, :act_id => a.id) do %>
					fb email<%= text_field_tag(:email)%>
					<%= submit_tag("Add User")%>
				<%end%>
			</li>
			<%end%>
		</ul>
		</li>
	<%end%>
</ul>

<% if @user_id == @e.event_head %>
<h2>Add new activity into this event!</h2>
<h3> 新增節目(default template: google 行事曆, 約練討論區, 收支記帳表,節目介紹單,檔案連結區)</h3>
	<%= form_tag(:controller => 'event', :action => 'create_act',:id => @id, :user_id => @user_id) do %>
	activity name<%= text_field_tag(:act_name)%><br>
	administrator email<%= text_field_tag(:email)%><br>
	optional template
	<%= check_box_tag(:light_music_table) %>
	<%= label_tag(:light_music_table, "燈音表") %>
	<%= check_box_tag(:script) %>
	<%= label_tag(:script, "劇本") %>
	<%= submit_tag("Add Activity")%>
	<%end%>
<%end%>
