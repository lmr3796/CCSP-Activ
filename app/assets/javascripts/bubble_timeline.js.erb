                $("#light").append('<p class="triangle-border right" style="position:absolute;top:'+t_o(time)+'px;right:510px">'+content+'</p>');
                else
                $("#spotlight").append('<p class="triangle-border left" style="position:absolute;top:'+t_o(time)+'px; ">'+content+'</p>');
            counter++;
            });
        }
    },"json");
}

